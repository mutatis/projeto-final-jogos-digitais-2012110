function Asteroid(file, size_x, size_y, pontos)
{
	this.img = new Image();
	this.img.src = file;
	this.visible = true;
	this.size_x = size_x;
	this.size_y = size_y;
	this.pontos = pontos;
	this.position_x = Math.floor((Math.random()*(SCREENWIDTH-this.size_x)));
	this.position_y = (SCREENHEIGHT+this.size_y);
    this.velocity_x = 0;
    this.velocity_y = -1;
    
   
   this.update=function()
   {
   		this.position_x += this.velocity_x;
   		
   		this.position_y += this.velocity_y;
   		
   		if(this.position_y < -this.size_y)
   		{
   			this.visible = true;
   			this.position_y=(SCREENHEIGHT+this.size_y);
   			this.position_x=Math.floor((Math.random()*(SCREENWIDTH-this.size_x)));
   		}
   };
   
   
   
   
   this.draw=function()
   {
		if(this.visible)
		screen.drawImage(this.img, this.position_x, this.position_y, this.size_x, this.size_y);
   };
   
   this.mouse_down=function(mouse)
   {
   	 if(this.enemy.clicked(mouse))
		{
			console.log("Enemy" + mouse.x + " mouse Y " + mouse.y );			
		};

   };
   
   this.key_down=function(key)
   {
   	
   };
       
   this.mouse_up=function(mouse)
   {
   	
   };
   
   
   
   this.mouse_move=function(mouse)
   {
   	
   };
   
  this.clicked = function(mouse)
	{//abre botao clicado

	if(Collide(mouse.x, mouse.y, 1, 1, this.position_x, this.position_y, this.size_x, this.size_y))
				{
					if(this.visible == true)	
					{	
						return true;
					}
				}
				
				return false;
	}	
}
